rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /rooms/{roomId} {
      // Allow anyone to read rooms (needed for real-time onSnapshot listeners)
      allow read: if true;
      
      // Block ALL client-side writes
      // All mutations MUST go through Server Actions using Firebase Admin SDK
      // This prevents: malicious room deletion, data tampering, fake users
      allow create, update, delete: if false;
    }
  }
}
